services:
  backend:
    build:
      context: .
      dockerfile: backend/Dockerfile
    container_name: backend
    network_mode: "host"
    env_file:
      - backend/.env
    restart: unless-stopped
    volumes:
      - ./backend:/app
    command: >
      sh -c "gunicorn --bind 127.0.0.1:5000 run:app"