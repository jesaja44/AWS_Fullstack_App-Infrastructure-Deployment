services:
  backend:
    build:
      context: .
      dockerfile: backend/Dockerfile
    container_name: backend
    ports:
      - "5000:5000"
    env_file:
      - backend/.env
    networks:
      - app-network
    restart: unless-stopped
    depends_on:
      postgres:
        condition: service_healthy
    volumes:
      - ./backend:/app
    command: >
      sh -c "
        if [ \"$IS_RDS\" = \"true\" ]; then
          echo 'âœ… Skipping migrations & seeding for AWS RDS';
        else
          echo 'ðŸš€ Running migrations...';
          flask db upgrade;
          python manage.py seed_database;
        fi;
        gunicorn --bind 0.0.0.0:5000 run:app
      "

  postgres:
    image: postgres:15
    container_name: postgres
    restart: always
    env_file:
      - backend/.env
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 3s
      retries: 5

volumes:
  postgres_data:

networks:
  app-network:
    driver: bridge
